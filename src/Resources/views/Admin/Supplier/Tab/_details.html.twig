<div class="ui active tab" data-tab="details">
    <h3 class="ui top attached header">{{ 'sylius.ui.details'|trans }}</h3>

    <div class="ui attached segment">
        <div class="ui two column stackable grid">
            <div class="column">
                <div class="ui segment">
                    {{ form_row(form.name) }}
                    {% include '@DameervSyliusSupplierPlugin/Field/_slug.html.twig' with { 'slugField': form.slug } %}
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="column">
                <div class="ui segment">
                    {{ form_row(form.enabled) }}
                    {{ form_row(form.isVip) }}
                    {{ form_row(form.channels) }}
                </div>
            </div>
        </div>

        {{ sylius_template_event(['dameerv_sylius_supplier_plugin.admin.supplier.' ~ action ~ '.tab_details', 'dameerv_sylius_supplier_plugin.admin.supplier.tab_details'], {'form': form}) }}
    </div>
</div>
